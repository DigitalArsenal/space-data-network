{
  "name": "@spacedatanetwork/sdn-js",
  "version": "1.0.0",
  "description": "Space Data Network JavaScript library for browser and Node.js",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "wasm"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:relay": "SDN_RUN_RELAY_TEST=1 vitest run src/spaceaware-relay.integration.test.ts",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "space",
    "data",
    "network",
    "p2p",
    "libp2p",
    "flatbuffers",
    "ipfs"
  ],
  "author": "Space Data Network",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DigitalArsenal/space-data-network.git",
    "directory": "sdn-js"
  },
  "homepage": "https://github.com/DigitalArsenal/space-data-network/tree/main/sdn-js#readme",
  "bugs": {
    "url": "https://github.com/DigitalArsenal/space-data-network/issues"
  },
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "^13.0.0",
    "@chainsafe/libp2p-noise": "^15.0.0",
    "@chainsafe/libp2p-yamux": "^8.0.1",
    "@libp2p/bootstrap": "^10.0.0",
    "@libp2p/circuit-relay-v2": "^1.0.0",
    "@libp2p/crypto": "^4.1.9",
    "@libp2p/identify": "^2.0.0",
    "@libp2p/kad-dht": "^12.0.0",
    "@libp2p/websockets": "^8.0.0",
    "@libp2p/webtransport": "^4.0.0",
    "@multiformats/multiaddr": "^12.1.0",
    "flatsql": "github:DigitalArsenal/flatsql#v0.3.9",
    "hd-wallet-wasm": "^1.6.0",
    "idb": "^8.0.0",
    "libp2p": "^1.2.0",
    "qrcode": "^1.5.3",
    "uint8arrays": "^5.0.0",
    "vcard-cryptoperson": "^1.1.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
